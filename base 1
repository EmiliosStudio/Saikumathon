  <body>
    <main>
      <h1>Tablero Saikumathon (10Ã—10)</h1>
      <section class="board" id="board" aria-label="Tablero Saikumathon"></section>
    </main>

    <script>
      const board = document.getElementById('board');
      const sequence = ['negro', 'gris-oscuro', 'gris-claro'];
      const firstColumn = ['blanco', 'gris-oscuro', 'negro', 'gris-claro'];

      for (let row = 0; row < 10; row += 1) {
        for (let col = 0; col < 10; col += 1) {
          const cell = document.createElement('div');
          const color =
            col === 0
              ? firstColumn[row % firstColumn.length]
              : sequence[(col - 1 + row * 2) % sequence.length];

          cell.className = `cell ${color}`;
          board.appendChild(cell);
        }
      }
    </script>
  </body>
