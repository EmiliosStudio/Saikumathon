    <style>
      :root {
        --negro: #000000;
        --gris-oscuro: #9e9e9e;
        --gris-claro: #d4d4d4;
        --blanco: #f2f2f2;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        min-height: 100vh;
        display: grid;
        place-items: center;
        background: #1f1f1f;
        font-family: Inter, Arial, sans-serif;
        color: #ffffff;
        padding: 1rem;
      }

      main {
        width: min(92vmin, 900px);
      }

      h1 {
        text-align: center;
        font-size: clamp(1.4rem, 2.4vw, 2rem);
        margin: 0 0 1rem;
      }

      .board {
        width: 100%;
        aspect-ratio: 1;
        display: grid;
        grid-template-columns: repeat(10, 1fr);
        border: 2px solid #202020;
      }

      .cell {
        width: 100%;
        aspect-ratio: 1;
      }

      .negro {
        background: var(--negro);
      }

      .gris-oscuro {
        background: var(--gris-oscuro);
      }

      .gris-claro {
        background: var(--gris-claro);
